

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Photo"
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_margin="5dp">

            <ImageView
                android:contentDescription="@string/accept"
                android:id="@+id/imageProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ghost_in_shell">

                <requestFocus />

            </ImageView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="15dip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:id="@+id/EditText_User_Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorBlack"
            android:textSize="15dip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your email"
            android:focusable="false"
            android:singleLine="true"
            android:id="@+id/EditText_User_Email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/colorBlack"
            android:textSize="15dip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your phone"
            android:inputType="phone"
            android:singleLine="true"
            android:id="@+id/EditText_User_Phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            >

            <Button
                android:id="@+id/Button_SaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/fbutton_default_color"
                android:textColor="@color/colorWhite">
            </Button>

            <Button
                android:id="@+id/Button_CancelProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/fbutton_default_color"
                android:textColor="@color/colorWhite">
            </Button>
        </LinearLayout>
    </LinearLayout>
